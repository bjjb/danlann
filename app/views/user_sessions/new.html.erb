<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= error_message_on :user_session, :base, :css_class => 'form error' %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <div id='user_session_base'></div>
  <%= f.submit "Log In" %>
  <ol class='links'>
    <li><%= link_to 'Register', new_user_path %></li>
    <li><%= link_to 'Forgot Password?', root_path %></li>
  </ol>
<% end %>
