<% title "Register" %>

<% form_for(@user) do |f| %>
  <%= error_message_on :user, :base, :css_class => 'form error' %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation, :label => 'Confirm Password' %>
  <%= f.submit 'Register' %>
<% end %>
