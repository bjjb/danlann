@picture.operate do |picture|
  picture.border :size => 5, :color => 'white'
  picture.shadow  :color => 'black',
                  :background => 'rgb(16, 16, 16)',
                  :blur => 8,
                  :opacity => 0.75,
                  :offset => '5x5'
  picture.resize '200x200'
end
