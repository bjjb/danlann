<% title "Upload" %>
<% form_for @picture, :html => { :multipart => true } do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.file_field :image_file %>
  <%= f.text_field :image_file_url, :label => 'or URL' %>
  <%= f.text_field :tag_names %>
  <%= f.submit "Create" %>
<% end %>

