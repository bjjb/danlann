# app/views/pictures/show.jpg.flexi
# Accessed via http://mysite.com/pictures/123.jpg
@picture.operate do |picture|
  picture.border :size => 10, :color => 'white'
  picture.shadow :color => 'black',
                  :background => 'white',
                  :blur => 8,
                  :opacity => 0.75,
                  :offset => '5x5'
  picture.resize '640x480'
end
