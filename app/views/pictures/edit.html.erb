<% title "Edit Picture" %>
<% form_for @picture do |f| %>
  <%= image_tag thumbnail_picture_path(@picture), :alt => @picture.name, :title => 'Preview' %>
  <%= error_message_on :user_session, :base, :css_class => 'form error' %>
  <%= f.text_field :name %>
  <%= f.text_area :description, :rows => 10 %>
  <%= f.text_field :tag_names, :label => 'Tags' %>
  <%= f.check_box :public, :label => 'Make this Picture Public' %>
  <%= f.submit "Save" %>
  <%= link_to 'Cancel', picture_path(@picture) %>
<% end %>
