<% title 'Pictures' %>
<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Image filename</th>
    <th>Image width</th>
    <th>Image height</th>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=h picture.image_filename %></td>
    <td><%=h picture.image_width %></td>
    <td><%=h picture.image_height %></td>
    <td><%=h picture.name %></td>
    <td><%=h picture.description %></td>
    <td><%=h picture.user_id %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>
