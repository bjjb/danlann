<%- if show_user_nav? -%>
<ul class='user_nav'>
  <%- if current_user -%>
  <li><%= link_to image_tag(current_user.gravatar_url), edit_user_path(:current), :class => 'account' %></li>
  <li><%= link_to 'Log Out', logout_path, :class => 'logout' %></li>
  <%- else -%>
  <li><%= link_to 'Register', new_user_path, :class => 'register' %></li>
  <li><%= link_to 'Log In', login_path, :class => 'login' %></li>
  <%- end -%>
</ul>
<%- end -%>
