body {
  font-family: sans-serif;
  background-color: #599;
}

div.page {
  background-color: #fff;
  width: 80%;
  margin: auto;
  border: 3px solid #344;
  padding: 1em;
}

div.header {
  background-color: #7bb;
  padding: 1em;
  margin-bottom: 1em;
}

div.header>h1 {
  color: #bff;
  font-size: 300%;
  width: 50%;
}

div.header>ul {
  padding: 0;
}

div.header>ul>li>a, div.header>ul>li>a:visited {
  color: #fff;
  font-weight: bold;
}

div.header>ul>li {
  list-style: none;
  padding-right: 2em;
  display: inline;
}

ul.user_nav {
  color: #fff;
  font-size: 75%;
  float: left;
  margin-top: -10em;
}

ul.navigation {
  float: right;
  margin-top: -1em;
}

form.search {
  float: right;
  margin-top: -7.6em;
}

div.content>form {
  width: 20em;
  margin: auto;
}

a {
  text-decoration: none;
}
